    <version>0.0.1-SNAPSHOT</version>
  </parent>

  <artifactId>spring-boot-14-security</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>spring-boot-14-security</name>
  <description>Spring Boot 安全框架</description>

  <dependencies>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-security</artifactId>
